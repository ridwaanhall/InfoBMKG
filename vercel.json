{
    "builds": [
        {
            "src": "InfoBMKG/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12.0"
            }
        },
        {
            "src": "static/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "InfoBMKG/wsgi.py"
        }
    ],
    "scripts": {
        "post-build": "python InfoBMKG/manage.py collectstatic --noinput"
    }
}